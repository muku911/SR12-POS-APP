<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="@android:color/darker_gray" android:padding="1dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="@color/ic_launcher_background"
            android:padding="5dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgview_item"
        />
        <TextView
                android:text="Apa aja ini mah yang penting agak panjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvNameItem"
                android:textAlignment="center"
                android:gravity="center"/>
    </LinearLayout>
</LinearLayout>