<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark" android:paddingLeft="1dp"
            android:paddingRight="1dp" android:paddingTop="1dp">
        <TextView
                android:text="100"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvItemNumber" android:textSize="14sp"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/background_light" android:layout_weight="2.7"
                android:textAlignment="center" android:gravity="center"
                android:layout_marginRight="1dp" android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        <TextView
                android:text="NAMA ITEM APALAH INI COBA DI PERPANJANG AJA"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvItemName" android:layout_weight="0.8"
                android:textSize="14sp" android:textColor="@android:color/background_dark"
                android:background="@android:color/background_light" android:paddingTop="10dp"
                android:paddingBottom="10dp" android:paddingLeft="5dp"/>
        <TextView
                android:text="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/tvItemCount" android:textSize="14sp"
                android:textColor="@android:color/background_dark"
                android:background="@android:color/background_light" android:layout_weight="2.5"
                android:textAlignment="center" android:layout_marginLeft="1dp" android:gravity="center"
                android:paddingTop="10dp" android:paddingBottom="10dp"/>
    </LinearLayout>
</LinearLayout>